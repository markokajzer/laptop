#!/bin/bash

nl_echo() {
  local fmt="$1"; shift
  printf "\n$fmt\n" "$@"
}


nl_echo "Syncing Atom Settings..."
cp files/atom/*   ~/.atom

nl_echo "Updating global git config..."
cp files/git/*    ~

nl_echo "Overwriting runcoms..."
cat files/.zpreztorc >| ~/.zpreztorc
cat files/.zprofile  >| ~/.zprofile
cat files/.zshrc     >| ~/.zshrc
